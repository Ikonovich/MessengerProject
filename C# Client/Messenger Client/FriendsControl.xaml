<UserControl x:Class="Messenger_Client.FriendsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Messenger_Client"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius ="10" BorderBrush ="Transparent" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="190" Height ="415" Margin="5, 30, 0, 0">
            <Grid>
                <!--Friends label box-->
                <Border CornerRadius ="7, 7, 0, 00" BorderBrush ="Blue" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Top" Height ="25" Width="186" Margin="0, 0, 0, 0">
                    <RichTextBox IsReadOnly="True" Background="Transparent" BorderBrush="Transparent">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="Friends List:"/>
                                <InlineUIContainer>
                                    <Grid/>
                                </InlineUIContainer>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                </Border>
                <!--Sort menu-->
                <Border Background="Transparent" BorderBrush ="Blue" BorderThickness="2, 0, 2, 2" HorizontalAlignment="Left" VerticalAlignment="Top" Height ="25" Width="90" Margin="0, 24, 0, 0">
                    <ComboBox Background="Transparent">
                        <ComboBoxItem Name ="ActiveSort" Background ="Transparent" IsSelected="True" ToolTip="Sort by most recently active">Active</ComboBoxItem>
                        <ComboBoxItem Name ="AlphabeticalSort" Background ="Transparent" ToolTip="Sort alphabetically">Alphabetical</ComboBoxItem>
                        <ComboBoxItem Name ="RecentSort" Background ="Transparent" ToolTip="Sort by most recently messaged">Recent</ComboBoxItem>
                        <ComboBoxItem Name ="FavoriteSort" Background ="Transparent" ToolTip="Sort by most messaged">Favorite</ComboBoxItem>
                    </ComboBox>

                </Border>
                <!--Search box-->
                <Border BorderBrush ="Blue" BorderThickness="2, 0, 2, 2" HorizontalAlignment="Right" VerticalAlignment="Top" Height ="25" Width="100" Margin="0, 24, 0, 0">
                    <TextBox Name ="SearchBox" ToolTip="Search for friends by name" Text="Search" TextWrapping="NoWrap" Background="Transparent" Margin="2, 2, 0, 0" BorderBrush="Transparent"/>
                </Border>
                <ScrollViewer Height="350" VerticalScrollBarVisibility="Auto" Margin="00, 50, 0, 0">
                    <StackPanel Name="FriendsPanel">

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
