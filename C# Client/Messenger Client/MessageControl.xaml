<UserControl x:Class="Messenger_Client.MessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Messenger_Client"
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="190">
    <Grid VerticalAlignment="Top" Height="420" Margin="0, 30, 0, 0">
        <ScrollViewer VerticalScrollBarVisibility="Auto"  VerticalAlignment="Top" Height="365">
            <StackPanel Name ="MessagePanel" Height="Auto" Width="Auto" VerticalAlignment="Top">
                <ItemsControl x:Name="MessageDisplay">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="2, 1, 2, 1" BorderBrush="Black">
                                <RichTextBox VerticalAlignment="Top" Background="AliceBlue">
                                    <FlowDocument>
                                        <Paragraph>
                                            <Bold>
                                                <TextBlock Text="{Binding CreateTimestamp, Mode=OneWay}"/>
                                                <TextBlock Text=":"/>
                                                <TextBlock Text="{Binding SenderID, Mode=OneWay}"/>
                                                <TextBlock Text=":"/>
                                            </Bold>
                                            <TextBlock Text="{Binding Body}"/>
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        <TextBox Name="MessageEntry" Height="50" VerticalAlignment="Bottom" TextWrapping="Wrap" Margin="0,0,0,5">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="0,0,7,7"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
    </Grid>
</UserControl>
